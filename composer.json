{
  "name": "pipaslot/modules",
  "description": "Nette modularity library supporting ajax",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "Petr Å tipek",
      "email": "pipaslot@seznam.cz"
    }
  ],
  "keywords": [
    "pipas",
    "nette",
    "modules",
    "ajax"
  ],
  "require": {
    "nette/di": "~2.3",
    "nette/utils": "~2.3",
    "php": ">=5.5.0",
    "composer/composer": "^1.0",
    "nette/application": "^2.4",
    "pipaslot/utils": "^1.1"
  },
  "require-dev": {
    "nette/tester": "~1.3",
    "tracy/tracy": "^2.3",
    "mockery/mockery": "^0.9.4",
    "nette/bootstrap": "^2.3",
    "nette/robot-loader": "^2.3",
    "latte/latte": "^2.3",
    "nette/forms": "^2.3",
    "pipaslot/composer-extra": "~1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://git@bitbucket.org/pipaslot/composer-extra.git"
    }
  ],
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "demo/",
      "vendor/pipaslot/composer-extra"
    ]
  },
  "extra": {
    "directory": {
      "create": [
        "demo/log",
        "demo/temp",
        "demo/dist",
        "frontend/temp",
        "tests/temp"
      ],
      "clean": [
        "demo/temp",
        "frontend/temp",
        "tests/temp"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Pipas\\ComposerExtra\\Directory::run",
      "cd frontend && npm install",
      "cd frontend && npm install grunt",
      "cd frontend && npm install bower",
      "cd frontend && bower install",
      "cd frontend && grunt"
    ],
    "post-update-cmd": [
      "Pipas\\ComposerExtra\\Directory::run"
    ]
  }
}
