<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="author" content="Petr Å tipek, p.stipek@email.cz">

		<title n:snippet="title">{ifset $title}{$title} | {/ifset} Integ-race</title>

		<link rel="shortcut icon" href="{$basePath}/favicon.ico">
        <link rel="stylesheet" href="{$basePath}/media/bower_components/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{$basePath}/media/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="{$basePath}/media/bower_components/pipaslot-frontend/dist/nette.css">
        <link rel="stylesheet" href="{$basePath}/media/bower_components/pipaslot-frontend/dist/pipas.css">
    </head>
	<body>
		{snippet styles}
		{block styles}
		<link rel="stylesheet" property="stylesheet" href="{$basePath}/media/css/style.css">
		{/block}
        {/snippet}

		{ifset navbar}
			{capture $navbar|strip}{include navbar}{/capture}
			{if $navbar!=''}
				<nav class="navbar navbar-default navbar-fixed-top">
					<div class="container">
						{$navbar|noescape}
					</div>
				</nav>
			{/if}
		{/ifset}
		<div n:snippet="content" class="container" role="main">

			{ifset header}
	            {include header}
	        {/ifset}
			<div class="flashMessages">
				<div n:foreach="$flashes as $flash" n:class="alert, 'alert-'.$flash->type">{$flash->message|noescape}</div>
			</div>
			{include content}
			{ifset footer}
				{include footer}
			{/ifset}
		</div>
		<script type="text/javascript" src="{$basePath}/media/bower_components/jquery/dist/jquery.min.js"></script>
		<script type="text/javascript" src="{$basePath}/media/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
	    <script type="text/javascript" src="{$basePath}/media/bower_components/Nette-LiveFormValidation/src/netteForms.js"></script>
	    <script type="text/javascript" src="{$basePath}/media/bower_components/Nette-LiveFormValidation/src/live-form-validation.js"></script>
	    <script type="text/javascript" src="{$basePath}/media/bower_components/nette.ajax.js/nette.ajax.js"></script>
	    <script type="text/javascript" src="{$basePath}/media/bower_components/pipaslot-frontend/dist/pipas.js"></script>
	    <script type="text/javascript" src="{$basePath}/media/bower_components/pipaslot-frontend/dist/nette-extensions.js"></script>
		{snippet scripts}
	    {block scripts}
		{/block}
		{/snippet}
	    <script type="text/javascript" src="{$basePath}/media/bower_components/pipaslot-frontend/dist/nette-init.js"></script>
	</body>
</html>
